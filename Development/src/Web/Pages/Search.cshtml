            </div>
        </div>
    </div>
</div>


@section Scripts {
    <script src="~/Pages/Search.cshtml.js" asp-append-version="true"></script>
    <script>
        document.addEventListener('DOMContentLoaded', () => {
            Search.Init();
        });
    </script>
}