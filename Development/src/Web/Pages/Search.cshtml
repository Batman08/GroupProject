@page
@model Web.Pages.SearchModel
@{
    ViewData["Title"] = "Search";
}

@section Styles {

    <link rel="stylesheet" href="~/Pages/Search.cshtml.css" asp-append-version="true" />

}


<div id="divSearchContainer" class="pt-3">
    <div class="col-md-8 mx-auto">
        <div id="divSearchResults" class="row row-cols-1 row-cols-md-2 pt-5 g-4">

            @* Loading Placeholder *@
            <div class="col">
                <div class="mb-5">
                    <div class="card" aria-hidden="true">
                        <div class="card-body">
                            <p class="card-text placeholder-glow">
                                <span class="placeholder col-12 mb-4"></span>
                                <span class="placeholder col-12 mb-4"></span>
                                <span class="placeholder col-12 mb-4"></span>
                                <span class="placeholder col-12 mb-4"></span>
                                <span class="placeholder col-12 mb-4"></span>
                                <span class="placeholder col-12 mb-4"></span>
                                <span class="placeholder col-12 mb-4"></span>
                            </p>
                        </div>
                    </div>

                    <div class="text-center pt-3">
                        <button class="btn btn-primary disabled placeholder col-4 srch" aria-disabled="true"></button>
                    </div>
                </div>
            </div>

            @* Loading Placeholder *@
            <div class="col">
                <div class="mb-5">
                    <div class="card" aria-hidden="true">
                        <div class="card-body">
                            <p class="card-text placeholder-glow">
                                <span class="placeholder col-12 mb-4"></span>
                                <span class="placeholder col-12 mb-4"></span>
                                <span class="placeholder col-12 mb-4"></span>
                                <span class="placeholder col-12 mb-4"></span>
                                <span class="placeholder col-12 mb-4"></span>
                                <span class="placeholder col-12 mb-4"></span>
                                <span class="placeholder col-12 mb-4"></span>
                            </p>
                        </div>
                    </div>

                    <div class="text-center pt-3">
                        <button class="btn btn-primary disabled placeholder col-4 srch" aria-disabled="true"></button>
                    </div>
                </div>
            </div>

        </div>
    </div>

</div>

@section ElementTemplates {

    @* divModuleOption *@
    <div id="gp-divModuleOption" class="col-md">
        <div class="mb-5 h-100">
            <div class="card h-100 srch-card-border">
                <div class="card-body">
                    <p id="pModuleContents" class="card-text lyt-line-space"></p>
                </div>

                <div class="card-footer rounded-0 srch-card-footer">
                    <div class="text-center">
                        <button btnModuleOption id="btnModule" type="button" class="btn btn-primary srch"></button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    @*__NOTE: May be used instead of the above divModuleOption template__
        <div id="gp-divModuleOption" class="col-md">
        <div class="mb-5">
            <div class="card">
                <div class="card-body">
                    <p id="pModuleOverview" class="card-text text-truncate gp"></p>
                </div>
            </div>
            <div class="text-center pt-3">
                <button id="btnModule" type="button" class="btn btn-primary gp"></button>
            </div>
        </div>
    </div> *@
}


@section Scripts {

    <script src="~/js/KeywordsGenerator.js" asp-append-version="true"></script>
    <script src="~/Pages/Search.cshtml.js" asp-append-version="true"></script>
    <script>
        document.addEventListener('DOMContentLoaded', async () => {
            await Search.Init();
        });
    </script>

}