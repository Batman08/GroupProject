@page
@model Web.Pages.SearchModel
@{
    ViewData["Title"] = "Search";
}

@section Styles {
    <link rel="stylesheet" href="~/Pages/Search.cshtml.css" asp-append-version="true" />
}


<div id="divSearchContainer" class="pt-3">
    <div class="col-md-8 mx-auto">
        @* Search Form *@
        <form id="formModuleSearch" method="post">
            <div class="row mx-auto align-items-center justify-content-center">
                <div class="col-8">
                    <input type="text" class="form-control" id="inputModuleSearch" name="ModuleSearch" placeholder="Enter story keywords">
                </div>
                <div class="col-4">
                    <div class="text-center">
                        <button type="submit" class="btn btn-success">Load Story</button>
                    </div>
                </div>
            </div>
        </form>

        <div id="divSearchResults" class="row pt-5 g-5">
            <div class="col-md-6">
                <div class="card">
                    <div class="card-body">
