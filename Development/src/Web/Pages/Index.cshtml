@page
@model IndexModel
@{
    ViewData["Title"] = "Home";
}


<div id="divIndexContainer">
    <div class="row justify-content-center">
        <div class="col-md-6">

            <div class="text-center position-absolute top-50 start-50 translate-middle">
                <img src="~/images/SiteLogo.png" alt="Magnifying Glass" width="250">

                <div class="mt-5">
                    <button id="btnStartGame" type="button" class="btn btn-secondary btn-lg fw-bold fw-bold p-4">Begin your adventure</button>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {

    <script src="~/js/KeywordsGenerator.js" asp-append-version="true"></script>
    <script src="~/Pages/Index.cshtml.js" asp-append-version="true"></script>
    <script>
        document.addEventListener('DOMContentLoaded', async () => {
            await Index.Init();
        });
    </script>

}